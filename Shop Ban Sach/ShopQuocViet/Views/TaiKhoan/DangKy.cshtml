@model ShopQuocViet.Models.NguoiDung
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="panel panel-primary row">
        <div class="col-sm-3">

        </div>
        <div class="col-sm-6">
            <div class="panel-heading">
                <h2 class="text-center">Đăng ký tài khoản</h2>
            </div>
            <form method="post" action="DangKy">
                <div class="panel-body">
                    <div class="form-group">
                        <label for="nameAcc">Tên đăng nhập:</label>
                        @Html.TextBoxFor(m => m.TenDN, "", new { @class = "form-control",@id = "nameAcc", @placeholder = "Tên đăng nhập" })
                        @Html.ValidationMessageFor(m => m.TenDN)
                        @if(ViewBag.Loi != null)
                        {
                            <span>@ViewBag.Loi</span>
                        }
                    </div>
                    <div class="form-group">
                        <label for="pass">Mật khẩu:</label>
                        @Html.TextBoxFor(m => m.MatKhau, "", new { @class = "form-control", @type = "password", @id = "pass", @placeholder = "Mật khẩu" })
                        @Html.ValidationMessageFor(m => m.MatKhau)
                    </div>
                    <div class="form-group">
                        <label for="rePass">Nhập lại mật khẩu:</label>
                        @Html.TextBoxFor(m => m.ReMatKhau, "", new { @class = "form-control", @type = "password", @id = "rePass", @placeholder = "Nhập lại mật khẩu" })
                        @Html.ValidationMessageFor(m => m.ReMatKhau)
                    </div>
                    <div class="form-group">
                        <label for="usr">Họ và tên:</label>
                        @Html.TextBoxFor(m => m.TenND, "", new {@class = "form-control",@id = "usr", @placeholder = "Họ tên" })
                        @Html.ValidationMessageFor(m => m.TenND)
                    </div>
                    <div class="form-group">
                        <label for="birthday">Ngày sinh:</label>
                        @Html.TextBoxFor(m => m.NgaySinh, "", new { @class = "form-control", @type = "date", @id = "birthday", @placeholder = "Ngày sinh" })
                        @Html.ValidationMessageFor(m => m.NgaySinh)
                    </div>
                    <div class="form-group">
                        <label for="tel">Số điện thoại:</label>
                        @Html.TextBoxFor(m => m.SDT, "", new { @class = "form-control", @type = "tel",@id = "tel", @placeholder = "Số điện thoại" })
                        @Html.ValidationMessageFor(m => m.SDT)
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control",@type = "email" ,@id = "Email", @placeholder = "Email" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                    <div class="form-group">
                        <label for="address">Địa chỉ:</label>
                        @Html.TextBoxFor(m => m.DiaChi, "", new { @class = "form-control", @id = "address", @placeholder = "Địa chỉ" })
                        @Html.ValidationMessageFor(m => m.DiaChi)
                    </div>
                    <br />
                    <button class="btn btn-success butDK" type="submit">Đăng ký</button>
                </div>
            </form>        
        </div>
        <div class="col-sm-3">

        </div>
        <br />
    </div>
</div>
<style>
    .form-group span {
        color: red;
    }
</style>
