
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/LayoutDangNhap.cshtml";
}
<head>
    <title>Đăng nhập</title>
</head>
<div class="main-agileits">
    <!--form-stars-here-->
    <div class="form-w3-agile dangky">
        <h2>Đăng Ký Tài Khoản</h2>
        <form action="#" method="post">
            <div class="form-sub-w3">
                <input type="text" name="Username" placeholder="Tên đăng nhập" required="" />
                <div class="icon-w3">
                    <i class="fa fa-user" aria-hidden="true"></i>
                </div>
            </div>
            <div class="form-sub-w3">
                <input type="password" name="Password" placeholder="Mật khẩu" required="" />
                <div class="icon-w3">
                    <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                </div>
            </div>
            <div class="form-sub-w3">
                <input type="password" name="submitPassword" placeholder="Nhập lại mật khẩu" required="" />
                <div class="icon-w3">
                    <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                </div>
            </div>
            <p class="p-bottom-w3ls1">Bạn đã có tài khoản?<a href="/TaiKhoan/DangNhap"> Đăng nhập</a></p>
            <div class="clear"></div>
            <div class="submit-w3l">
                <input type="submit" value="Đăng Ký">
            </div>
        </form>
        <div class="social w3layouts">
            <div class="heading">
                <h5>Đăng nhập với</h5>
                <div class="clear"></div>
            </div>
            <div class="icons">
                <a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-pinterest-p" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-linkedin" aria-hidden="true"></i></a>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
</div>



