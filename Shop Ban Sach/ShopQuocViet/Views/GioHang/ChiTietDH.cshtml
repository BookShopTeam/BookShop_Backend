@using ShopQuocViet.Models
@model List<ViewChiTietHD>
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class=" col-sm-2">

        </div>
        <div class=" col-sm-8">
            <div style="color: red; text-align:center;">Chi Tiết Đơn Hàng</div>
            <br />
            <br />
            <table class="table">
                <thead>
                    <tr>
                        <th style="text-align:center">Tên sách</th>
                        <th style="text-align:center">Số lượng</th>
                        <th style="text-align:center">Đơn giá</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:center">@item.TenSach</td>
                            <td style="text-align:center">@item.SoLuong</td>
                            <td style="text-align:center">@item.DonGia</td>
                        </tr>
                    }

                </tbody>
            </table>
            <br />
            <br />
        </div>
        <div class=" col-sm-2">

        </div>
    </div>
</div>




