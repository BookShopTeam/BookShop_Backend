
@{
    Layout = null;
}
@using ShopQuocViet.Models
@model List<Sach>

<div class="container">
    <div class="title">
        <h2>Có thể bạn quan tâm</h2>
        <hr>
    </div>
    <div class="row">
        @foreach(var item in Model)
        {
            <div class="col-lg-3 col-md-12">
                <div class="item">
                    <img src="~/Content/images/AnhSanPham1105010122052.jpg" alt="img">
                    <h3><a href="/ChiTietSP/index">@item.TenSach</a></h3>
                    <h6><span class="price">@item.GiaBan</span> / <a href="/ChiTietSP/index">Mua</a></h6>
                </div>
            </div>
        }
        
    </div>
    <div class="btn-sec">
        <a href="/DanhMucSP/index" class="btn butDanhMucSach">Xem Thêm</a>
    </div>
</div>