
@{
    Layout = null;
}
@using ShopQuocViet.Models;
@model List<Sach>


<div class="container">
    <div class="title">
        <h2>sách nổi bật</h2>
        <hr>
    </div>
    <div class="row">
        @{
            foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-12">
                    <div class="item">
                        <img src="~/Content/images/AnhSanPham1109060251335.jpg" alt="img">
                        <h3>@item.TenSach</h3>
                        <h6><span class="price">@item.GiaBan</span> / <a href="/ChiTietSP/index">Mua</a></h6>
                        <div class="hover">
                            <a href="/ChiTietSP/index">
                                <span><i class="fa fa-long-arrow-right" aria-hidden="true"></i></span>
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
      
    </div>
    <div class="btn-sec butXemNB">
        <a href="/DanhMucSP/index" class="btn butDanhMucSach">Xem Thêm</a>
    </div>
</div>
