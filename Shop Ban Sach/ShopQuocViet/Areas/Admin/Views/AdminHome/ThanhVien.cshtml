@using ShopQuocViet.Models
@model List<NguoiDung>
@{
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
<div class="right__content">
    <div class="right__title">Bảng điều khiển</div>
    <p class="right__desc">Xem Thành viên</p>
    <div class="right__table">
        <div class="right__tableWrapper">
            <table>
                <thead>
                    <tr>
                        <th>Tài khoản</th>
                        <th>Tên</th>
                        <th>Email</th>
                        <th>Sđt</th>
                        <th>Địa chỉ</th>
                        <th>Xoá</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td data-label="STT">@item.TenDN</td>
                            <td data-label="Tên">@item.TenND</td>
                            <td data-label="Email">@item.Email</td>
                            <td data-label="Phone">@item.SDT</td>
                            <td data-label="Địa chỉ">@item.DiaChi</td>
                            <td data-label="Xoá" class="right__iconTable"><a href="#"><img src="~/Areas/Admin/Content/assets/icon-trash-black.svg" alt=""></a></td>
                        </tr>
                    }
                   
                </tbody>
            </table>
        </div>
    </div>
</div>

