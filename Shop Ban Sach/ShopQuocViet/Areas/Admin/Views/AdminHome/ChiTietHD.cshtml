@using ShopQuocViet.Models
@model List<CTHoaDon>
@{
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<div class="right__content">
    <div class="right__title">Bảng điều khiển</div>
    <p class="right__desc">Xem chi tiết đơn hàng</p>
    <p class="right__desc">Mã đơn hàng <span style="color:orange">@ViewBag.MaHD</span></p>
    <div class="right__table">
        <div class="right__tableWrapper">
            <table>
                <thead>
                    <tr>
                        <th>Mã hóa đơn</th>
                        <th>Mã sản phẩm</th>
                        <th>Đơn giá</th>
                        <th>Số lượng</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="stt" data-label="Mã hóa đơn">@item.MaHD</td>
                            <td data-label="Mã sản phẩm">@item.MaSach</td>
                            <td data-label="Đơn giá">@item.DonGia</td>
                            <td data-label="Số lượng">@item.SoLuong</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


