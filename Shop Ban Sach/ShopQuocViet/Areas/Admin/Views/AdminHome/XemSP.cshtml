@using ShopQuocViet.Models
@model List<TTSach>
@{
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<div class="right__content">
    <div class="right__title">Bảng điều khiển</div>
    <p class="right__desc">Xem sản phẩm</p>
    <div class="right__table">
        <div class="right__tableWrapper">
            <table>
                <thead>
                    <tr>
                        <th>Mã sản phẩm</th>
                        <th>Tên sản phẩm</th>
                        <th>Hình ảnh</th>
                        <th>Tác giả</th>
                        <th>Số trang</th>
                        <th>Giá bán</th>
                        <th>Sửa</th>
                        <th>Xoá</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="stt" data-label="STT">@Html.ActionLink(@item.MaSach, "XemCTSP", "AdminHome", new { id = @item.MaSach })</td>
                            <td data-label="Tên sản phẩm">Dada Dress</td>
                            <td data-label="Hình ảnh"><img src="~/Content/images/@item.PathAnh" alt=""></td>
                            <td data-label="Tác giả">@item.TacGia</td>
                            <td data-label="Số trang">@item.SoTrang</td>
                            <td data-label="Giá bán">@item.GiaBan</td>
                            <td data-label="Sửa" class="right__iconTable"><a href=""><img src="~/Areas/Admin/Content/assets/icon-edit.svg" alt=""></a></td>
                            <td data-label="Xoá" class="right__iconTable"><a href=""><img src="~/Areas/Admin/Content/assets/icon-trash-black.svg" alt=""></a></td>
                        </tr>
                    }               
                </tbody>
            </table>
        </div>
    </div>
</div>
<style>
    .right__tableWrapper a {
        color: orange;
    }
</style>